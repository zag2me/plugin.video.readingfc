    <summary lang="en">Reading FC</summary>
    <description lang="en">Official YouTube account of Reading Football Club including weekly highlights of matches. UK only.</description>
    <platform>all</platform>
    <forum>http://forum.kodi.tv/showthread.php?tid=296407</forum>
    <source>https://github.com/zag2me/plugin.video.readingfc</source>
    <website>https://kodi.tv</website>
    <email>zag@kodi.tv</email>
    <license>GPL v2.0</license>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
        <screenshot>resources/screenshot-01.jpg</screenshot>
        <screenshot>resources/screenshot-02.jpg</screenshot>
        <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
    <news>Initial Release</news>
  </extension>
